<%- include ("../partials/header.ejs") %> 
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            Current Runs
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% runs.forEach(function(run){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                     <div class="caption">
                         <h4>Run <%=run.run_id %></h4>
                     </div>
                     <p>Collection: <%= run.collection_id %></p>
                     <p>Status: <%= run.status_name %></p>
                     <p>Created: <%=moment(run.created).format('DD.MM.YYYY')%></p>
                     <p>
                         <a href="/runs/<%= run.run_id %>" class="btn btn-primary">Show</a>
                     </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include ("../partials/footer.ejs") %> 