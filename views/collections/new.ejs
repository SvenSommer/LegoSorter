<%- include ("../partials/header.ejs") %> 
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align:center;">New Collection</h1>
            <form action="/collections" method ="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" class="form-control" type="text" name="name">
                </div>
                <div class="form-group">
                    <label for="weight_kg">Weight (kg)</label>
                    <input id="weight_kg" class="form-control" type="text" name="weight_kg">
                </div>
                <div class="form-group">
                    <label for="origin">Origin</label>
                    <input id="origin" class="form-control" type="text" name="origin" >
                </div>
                <div class="form-group">
                    <label for="origin">Origin Url</label>
                    <input id="origin" class="form-control" type="text" name="origin_url" >
                </div>
                <div class="form-group">
                    <label for="seller">Seller</label>
                    <input id="seller" class="form-control" type="text" name="seller" >
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input id="description" class="form-control" type="text" name="description" >
                </div>
                <div class="form-group">
                    <label for="purchase_date">Purchase Date</label>
                    <input id="purchase_date" class="form-control" type="text" name="purchase_date" >
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input id="cost" class="form-control" type="text" name="cost">
                </div>
                <div class="form-group">
                    <label for="porto">Porto</label>
                    <input id="porto" class="form-control" type="text" name="porto">
                </div>
                <div class="form-group">
                    <label for="thumbnail_url">Thumbnail url</label>
                    <input id="thumbnail_url" class="form-control" type="text" name="thumbnail_url">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Submit!</button>
                </div>
            </form>
                    <a href="/collections">Go back</a>
        </div>

    </div>
</div>
<%- include ("../partials/footer.ejs") %> 