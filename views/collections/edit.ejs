<%- include ("../partials/header.ejs") %> 
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align:center;">Edit Collection</h1>
            <form action="/collections/<%=collection.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" class="form-control" type="text" name="name" value="<%= collection.name %>">
                </div>
                <div class="form-group">
                    <label for="name">Weight (kg)</label>
                    <input id="weight_kg" class="form-control" type="text" name="weight_kg" value="<%=collection.weight_kg%>">
                </div>
                <div class="form-group">
                    <label for="name">Origin</label>
                    <input id="origin" class="form-control" type="text" name="origin"  value="<%=collection.origin%>">
                </div>
                <div class="form-group">
                    <label for="name">Origin Url</label>
                    <input id="origin" class="form-control" type="text" name="origin_url"  value="<%=collection.origin_url%>">
                </div>
                <div class="form-group">
                    <label for="name">Seller</label>
                    <input id="seller" class="form-control" type="text" name="seller"  value="<%=collection.seller%>">
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <input id="description" class="form-control" type="text" name="description"  value="<%=collection.description%>">
                </div>
                <div class="form-group">
                    <label for="name">Purchase Date</label>
                    <input id="purchase_date" class="form-control" type="text" name="purchase_date"  value="<%=collection.purchase_date%>">
                </div>
                <div class="form-group">
                    <label for="name">Cost</label>
                    <input id="cost" class="form-control" type="text" name="cost"  value="<%=collection.cost%>">
                </div>
                <div class="form-group">
                    <label for="name">Porto</label>
                    <input id="porto" class="form-control" type="text" name="porto"  value="<%=collection.porto%>">
                </div>
                <div class="form-group">
                    <label for="name">Thumbnail url</label>
                    <input id="thumbnail_url" class="form-control" type="text" name="thumbnail_url"  value="<%=collection.thumbnail_url%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Save changes</button>
                </div>
            </form>
                    <a href="/collections">Go back</a>
        </div>

    </div>
</div>
<%- include ("../partials/footer.ejs") %> 